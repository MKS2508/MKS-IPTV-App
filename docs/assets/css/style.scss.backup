// Additional Info Section
.additional-info {
  text-align: center;
  margin-top: 50px;
  padding: 30px;
  background: var(--surface);
  border: 1px solid var(--primary);
  border-radius: 16px;
  
  h4 {
    margin: 0 0 15px 0;
    font-size: 1.3rem;
    color: var(--text-primary);
  }
  
  p {
    margin: 0;
    color: var(--text-secondary);
    
    a {
      color: var(--cyan-neon);
      text-decoration: none;
      transition: color 0.3s ease;
      
      &:hover {
        color: var(--accent);
        text-decoration: underline;
      }
    }
  }
}

// Support Section
.support-section {
  margin-top: 80px;
  text-align: center;
  
  h2 {
    font-size: 2rem;
    margin: 0 0 20px 0;
    color: var(--text-primary);
  }
  
  p {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 40px;
  }
}

.support-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 30px;
  max-width: 900px;
  margin: 0 auto;
}

.support-item {
  background: var(--surface);
  border: 1px solid var(--primary);
  border-radius: 16px;
  padding: 30px;
  text-decoration: none;
  color: var(--text-primary);
  display: flex;
  align-items: flex-start;
  gap: 20px;
  transition: all 0.3s ease;
  
  &:hover {
    transform: translateY(-5px);
    border-color: var(--accent);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
    text-decoration: none;
    color: var(--text-primary);
    
    .support-icon {
      transform: scale(1.1) rotate(-5deg);
    }
  }
}

.support-icon {
  font-size: 2.5rem;
  flex-shrink: 0;
  transition: transform 0.3s ease;
  filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.2));
}

.support-content {
  h4 {
    margin: 0 0 10px 0;
    font-size: 1.2rem;
    color: var(--text-primary);
  }
  
  p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.5;
  }
}

// Responsive Design for Installation Guide
@media (max-width: 768px) {
  .installation-guide {
    padding: 20px 15px;
  }
  
  .installation-title {
    font-size: 2.2rem;
  }
  
  .platform-tabs {
    flex-direction: column;
    align-items: center;
    gap: 15px;
    
    .tab-btn {
      width: 100%;
      max-width: 300px;
    }
  }
  
  .requirements-grid {
    grid-template-columns: 1fr;
    gap: 15px;
  }
  
  .step-card {
    flex-direction: column;
    text-align: center;
    gap: 20px;
    padding: 25px;
    
    &:hover {
      transform: translateY(-5px);
    }
  }
  
  .step-visual {
    width: 60px;
    height: 60px;
    margin: 0 auto;
  }
  
  .visual-placeholder {
    font-size: 2.5rem;
  }
  
  .support-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .support-item {
    flex-direction: column;
    text-align: center;
    gap: 15px;
  }
  
  .code-block {
    padding: 15px;
    
    code {
      font-size: 0.8rem;
    }
  }
}

// Additional responsive improvements for smaller screens
@media (max-width: 480px) {
  .hero-section {
    padding: 30px 15px 100px 15px;
  }
  
  .installation-title {
    font-size: 1.8rem;
  }
  
  .hero-title-line {
    font-size: 2rem;
  }
  
  .hero-subtitle {
    font-size: 1rem;
  }
  
  .tab-btn {
    padding: 15px 20px;
    min-width: auto;
    
    .tab-icon {
      font-size: 1.2rem;
    }
    
    .tab-label {
      font-size: 0.85rem;
    }
  }
  
  .step-card {
    padding: 20px;
  }
  
  .feature-card {
    padding: 25px 20px;
  }
  
  .container {
    padding: 0 15px;
  }
  
  .screenshot-gallery {
    grid-template-columns: 1fr;
    gap: 15px;
  }
}

// Z-index organization and layering
.sticky-header {
  z-index: 1000 !important;
}

.lightbox {
  z-index: 9999 !important;
}

.hero-scroll-indicator {
  z-index: 100 !important;
}

.carousel-nav,
.carousel-dots {
  z-index: 50 !important;
}

.hero-cta {
  z-index: 10 !important;
  position: relative;
}

.back-to-top {
  z-index: 999 !important;
}

.nav-menu {
  z-index: 1001 !important;
}

.tooltip::before,
.tooltip::after {
  z-index: 1002 !important;
}

// Ensure proper stacking context
.hero-section {
  position: relative;
  z-index: 1;
}

.installation-guide {
  position: relative;
  z-index: 1;
}

// Fix any potential overflow issues
.carousel-container {
  position: relative;
  z-index: 1;
}

// Additional spacing fixes
.hero-badges {
  margin: 30px 0;
  position: relative;
  z-index: 5;
}

// Ensure mobile navigation works properly
@media (max-width: 768px) {
  .nav-menu {
    position: fixed;
    top: 70px;
    right: -100%;
    width: 100%;
    height: calc(100vh - 70px);
    background: var(--surface);
    backdrop-filter: blur(10px);
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    padding: 50px 0;
    transition: right 0.3s ease;
    z-index: 1001;
    
    &.active {
      right: 0;
    }
  }
  
  .nav-link {
    font-size: 1.2rem;
    padding: 15px 0;
    margin: 10px 0;
    width: 100%;
    text-align: center;
  }
  
  .nav-toggle {
    display: block;
    background: none;
    border: none;
    cursor: pointer;
    padding: 10px;
    z-index: 1002;
    
    .hamburger {
      display: block;
      width: 25px;
      height: 3px;
      background: var(--text-primary);
      margin: 5px 0;
      transition: 0.3s;
      
      &::before,
      &::after {
        content: '';
        display: block;
        width: 25px;
        height: 3px;
        background: var(--text-primary);
        margin: 5px 0;
        transition: 0.3s;
      }
    }
    
    &.active .hamburger {
      background: transparent;
      
      &::before {
        transform: rotate(-45deg) translate(-5px, 6px);
      }
      
      &::after {
        transform: rotate(45deg) translate(-5px, -6px);
      }
    }
  }
}

@media (min-width: 769px) {
  .nav-toggle {
    display: none;
  }
}