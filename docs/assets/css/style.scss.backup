---
---

@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap');

:root {
  --background: #252335;
  --surface: #2B2139;
  --primary: #463564;
  --accent: #C62790;
  --highlight: #FFD700;
  --cyan-neon: #00E5FF;
  --text-primary: #FFFFFF;
  --text-secondary: #B0A8B9;
  --font-family: 'Inter', sans-serif;
}

*, *::before, *::after {
  box-sizing: border-box;
}

body {
  font-family: var(--font-family);
  background-color: var(--background);
  color: var(--text-primary);
  margin: 0;
  padding-top: 70px; /* Space for sticky header */
  line-height: 1.6;
  background-image:
    linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
  background-size: 30px 30px;
  animation: fadeIn 1s ease-in-out;
}

.container {
  max-width: 960px;
  margin: 0 auto;
  padding: 0 20px;
}

.sticky-header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 15px 0;
  background: rgba(43, 33, 57, 0.95);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(70, 53, 100, 0.3);
  z-index: 1000;
  transition: all 0.3s ease;
  
  &.scrolled {
    padding: 10px 0;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    background: rgba(43, 33, 57, 0.98);
  }
  
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
}

.site-title {
  display: flex;
  align-items: center;
  gap: 12px;
  font-size: 1.2rem;
  font-weight: 700;
  color: var(--text-primary);
  text-decoration: none;
  transition: transform 0.3s ease;
  
  &:hover {
    transform: translateY(-2px);
    color: var(--text-primary);
    
    .site-logo {
      transform: rotate(-5deg) scale(1.1);
    }
  }
}

.site-logo {
  height: 35px;
  width: auto;
  transition: transform 0.3s ease;
  filter: drop-shadow(0 2px 4px rgba(0, 229, 255, 0.3));
}

nav {
  display: flex;
  gap: 20px;
}

.nav-link {
  color: var(--text-secondary);
  text-decoration: none;
  font-weight: 500;
  position: relative;
  padding: 5px 0;
  transition: color 0.3s ease;
  
  &::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--accent), var(--cyan-neon));
    transition: width 0.3s ease;
  }
  
  &:hover {
    color: var(--cyan-neon);
    
    &::after {
      width: 100%;
    }
  }
  
  &.active {
    color: var(--cyan-neon);
    
    &::after {
      width: 100%;
    }
  }
}

main {
  padding: 40px 0;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  color: var(--text-primary);
  
  /* Only use gradient on specific elements */
  &.gradient-text {
    background: linear-gradient(90deg, var(--accent), var(--cyan-neon));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-flow 5s ease infinite;
    background-size: 200% 200%;
  }
}

a {
  color: var(--cyan-neon);
  text-decoration: none;
  transition: color 0.3s;
  &:hover {
    color: var(--highlight);
  }
}

.btn {
  display: inline-block;
  padding: 12px 24px;
  background: var(--accent);
  color: var(--text-primary);
  border-radius: 5px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1px;
  border: 1px solid var(--accent);
  position: relative;
  overflow: hidden;
  transition: transform 0.3s, box-shadow 0.3s;
  z-index: 1;

  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(120deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
    z-index: -1;
  }

  &:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2), 0 0 20px var(--accent);
    &::before {
      left: 100%;
    }
  }
}

.download-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 20px;
  margin: 30px 0;
}

.download-card {
  background: var(--surface);
  border: 1px solid var(--primary);
  border-radius: 8px;
  padding: 25px;
  text-align: center;
  transition: transform 0.3s, box-shadow 0.3s, border-color 0.3s;
  opacity: 0;
  transform: translateY(20px);
  animation: stagger-in 0.5s ease-out forwards;

  @for $i from 1 through 10 {
    &:nth-child(#{$i}) {
      animation-delay: #{$i * 0.1}s;
    }
  }

  &:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 25px var(--accent);
    border-color: var(--accent);
  }

  h3 {
    margin-top: 0;
    color: var(--accent);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  p {
    margin-bottom: 20px;
    color: var(--text-secondary);
  }
}

blockquote {
  border-left: 4px solid var(--accent);
  padding-left: 20px;
  margin: 20px 0;
  background: rgba(var(--primary), 0.1);
  color: var(--text-secondary);
  font-style: italic;
}

table {
  width: 100%;
  border-collapse: collapse;
  margin: 25px 0;
  th, td {
    border: 1px solid var(--primary);
    padding: 12px;
    text-align: left;
  }
  th {
    background-color: var(--primary);
    color: var(--text-primary);
  }
  tbody tr:nth-child(odd) {
    background-color: var(--surface);
  }
}

.back-to-top {
  position: fixed;
  bottom: 20px;
  right: 20px;
  background: var(--accent);
  color: white;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-decoration: none;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s, visibility 0.3s, transform 0.3s;
  &:hover {
    transform: scale(1.1);
  }
  &.visible {
    opacity: 1;
    visibility: visible;
  }
}

.nav-toggle {
  display: none; /* Hidden by default on desktop */
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  z-index: 1001;
}

.hamburger {
  display: block;
  width: 28px;
  height: 3px;
  background: var(--text-primary);
  position: relative;
  transition: all 0.3s ease;
  border-radius: 3px;
  
  &::before, &::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 3px;
    background: var(--text-primary);
    left: 0;
    transition: all 0.3s ease;
    border-radius: 3px;
  }
  
  &::before {
    top: -9px;
  }
  
  &::after {
    top: 9px;
  }
}

@media (max-width: 768px) {
  .nav-menu {
    position: fixed;
    top: 0;
    right: -100%;
    width: 280px;
    height: 100vh;
    background: rgba(43, 33, 57, 0.98);
    backdrop-filter: blur(20px);
    flex-direction: column;
    padding: 100px 40px 40px;
    gap: 30px;
    transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: -5px 0 20px rgba(0, 0, 0, 0.3);
    
    &.active {
      right: 0;
    }
    
    .nav-link {
      font-size: 1.2rem;
      text-align: center;
      width: 100%;
      padding: 10px;
      border-radius: 8px;
      transition: all 0.3s ease;
      
      &:hover {
        background: rgba(198, 39, 144, 0.1);
      }
    }
  }
  
  .nav-toggle {
    display: block;
  }
  
  .nav-toggle.active .hamburger {
    background: transparent;
    
    &::before {
      top: 0;
      transform: rotate(45deg);
    }
    
    &::after {
      top: 0;
      transform: rotate(-45deg);
    }
  }
  
  // Prevent body scroll when menu is open
  body.menu-open {
    overflow: hidden;
  }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes stagger-in {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes gradient-flow {
    0%{background-position:0% 50%}
    50%{background-position:100% 50%}
    100%{background-position:0% 50%}
}

// Screenshot Gallery Styles
.screenshot-gallery {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 30px;
  margin: 40px 0;
  padding: 20px 0;

  figure {
    margin: 0;
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    background: var(--surface);
    border: 1px solid var(--primary);
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, transparent 40%, rgba(var(--accent), 0.1) 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: 1;
      pointer-events: none;
    }
    
    &:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), 0 0 30px rgba(198, 39, 144, 0.3);
      border-color: var(--accent);
      
      &::before {
        opacity: 1;
      }
      
      img {
        transform: scale(1.05);
      }
      
      figcaption {
        transform: translateY(0);
        opacity: 1;
      }
    }
  }

  img {
    width: 100%;
    height: auto;
    aspect-ratio: 16/10;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }

  figcaption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px;
    background: linear-gradient(to top, rgba(37, 35, 53, 0.95) 0%, transparent 100%);
    color: var(--text-primary);
    transform: translateY(100%);
    opacity: 0;
    transition: transform 0.3s ease, opacity 0.3s ease;
    z-index: 2;
    
    h3 {
      margin: 0 0 8px 0;
      font-size: 1.1rem;
      animation: none;
      background: none;
      -webkit-text-fill-color: var(--text-primary);
    }
    
    p {
      margin: 0;
      font-size: 0.85rem;
      color: var(--text-secondary);
      line-height: 1.4;
    }
  }
}

// Lightbox Styles
.lightbox {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.95);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
  backdrop-filter: blur(10px);
  
  &.active {
    opacity: 1;
    visibility: visible;
    
    .lightbox-content {
      transform: scale(1);
      opacity: 1;
    }
  }
}

.lightbox-content {
  position: relative;
  max-width: 90vw;
  max-height: 90vh;
  transform: scale(0.9);
  opacity: 0;
  transition: transform 0.3s ease, opacity 0.3s ease;
  
  img {
    max-width: 100%;
    max-height: 90vh;
    width: auto;
    height: auto;
    display: block;
    border-radius: 8px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  }
}

.lightbox-close {
  position: absolute;
  top: 20px;
  right: 20px;
  width: 40px;
  height: 40px;
  background: rgba(255, 255, 255, 0.1);
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  z-index: 2001;
  
  &::before,
  &::after {
    content: '';
    position: absolute;
    width: 20px;
    height: 2px;
    background: white;
  }
  
  &::before {
    transform: rotate(45deg);
  }
  
  &::after {
    transform: rotate(-45deg);
  }
  
  &:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: rotate(90deg);
  }
}

.lightbox-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.1);
  border: 2px solid rgba(255, 255, 255, 0.3);
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 24px;
  color: white;
  border-radius: 50%;
  
  &:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-50%) scale(1.1);
  }
  
  &.prev {
    left: 20px;
  }
  
  &.next {
    right: 20px;
  }
}

// Loading animation for images
.loading {
  position: relative;
  
  &::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 40px;
    height: 40px;
    margin: -20px 0 0 -20px;
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-top-color: var(--cyan-neon);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

// Hero Section Styles
.hero-section {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin-top: -70px;
  padding: 70px 0 120px 0; /* Add bottom padding for scroll indicator */
}

.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.hero-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(ellipse at center, transparent 0%, var(--background) 70%),
              linear-gradient(180deg, rgba(198, 39, 144, 0.1) 0%, transparent 50%),
              linear-gradient(0deg, rgba(0, 229, 255, 0.05) 0%, transparent 50%);
}

.hero-particles {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0.3;
}

.hero-content {
  text-align: center;
  z-index: 1;
  padding: 40px 20px;
  max-width: 1200px;
  width: 100%;
}

.hero-logo-wrapper {
  margin-bottom: 40px;
}

.hero-logo {
  max-width: 600px;
  width: 100%;
  height: auto;
  filter: drop-shadow(0 10px 40px rgba(198, 39, 144, 0.3));
}

.hero-title {
  margin-bottom: 20px;
}

.hero-title-line {
  font-size: clamp(2.5rem, 6vw, 4rem);
  font-weight: 800;
  display: block;
  margin-bottom: 10px;
  color: var(--text-primary);
  text-shadow: 0 0 20px rgba(198, 39, 144, 0.3);
  
  /* Keep gradient only for hero title as accent */
  background: linear-gradient(135deg, var(--accent), var(--cyan-neon), var(--accent));
  background-size: 200% 200%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: gradient-flow 4s ease infinite;
}

@keyframes glow-text {
  from {
    filter: drop-shadow(0 0 20px rgba(198, 39, 144, 0.5));
  }
  to {
    filter: drop-shadow(0 0 30px rgba(0, 229, 255, 0.7));
  }
}

.hero-subtitle {
  font-size: clamp(1rem, 3vw, 1.5rem);
  color: var(--text-secondary);
  display: block;
  margin-top: 10px;
  position: relative;
  min-height: 1.8em;
}

// Typewriter effect
.typewriter {
  &::after {
    content: '|';
    color: var(--cyan-neon);
    animation: blink 1s infinite;
  }
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}

.hero-description {
  font-size: 1.125rem;
  line-height: 1.8;
  color: var(--text-secondary);
  margin: 30px auto;
  max-width: 600px;
}

.hero-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  justify-content: center;
  margin: 40px 0;
  
  img {
    transition: transform 0.3s ease, filter 0.3s ease;
    
    &:hover {
      transform: translateY(-3px);
      filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.3));
    }
  }
}

.badge-float {
  animation: float 3s ease-in-out infinite;
  animation-delay: calc(var(--i) * 0.1s);
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.hero-cta {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: wrap;
  margin: 50px 0 40px 0; /* Add bottom margin */
}

.btn-primary {
  background: linear-gradient(135deg, var(--accent), var(--primary));
  color: white;
  padding: 16px 32px;
  font-size: 1.1rem;
  font-weight: 600;
  border: none;
  position: relative;
  overflow: hidden;
  
  &::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }
  
  &:hover::before {
    width: 300px;
    height: 300px;
  }
}

.btn-secondary {
  background: transparent;
  color: var(--cyan-neon);
  padding: 16px 32px;
  font-size: 1.1rem;
  font-weight: 600;
  border: 2px solid var(--cyan-neon);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  
  &:hover {
    color: var(--background);
    background: var(--cyan-neon);
    box-shadow: 0 0 30px var(--cyan-neon);
  }
}

.btn-glow {
  animation: pulse-glow 2s infinite;
}

@keyframes pulse-glow {
  0% {
    box-shadow: 0 0 0 0 rgba(198, 39, 144, 0.4);
  }
  70% {
    box-shadow: 0 0 0 20px rgba(198, 39, 144, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(198, 39, 144, 0);
  }
}

.btn-text {
  position: relative;
  z-index: 1;
}

.btn-icon {
  margin-left: 8px;
  display: inline-block;
  transition: transform 0.3s ease;
}

.btn:hover .btn-icon {
  transform: translateX(5px);
}

.btn-secondary:hover .btn-icon {
  transform: translateY(3px);
}

// Scroll indicator
.hero-scroll-indicator {
  position: absolute;
  bottom: 30px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10px;
  animation: bounce 2s infinite;
  z-index: 5; /* Ensure it's above other elements */
}

.mouse {
  width: 30px;
  height: 50px;
  border: 2px solid var(--text-secondary);
  border-radius: 25px;
  position: relative;
}

.wheel {
  width: 4px;
  height: 10px;
  background: var(--text-secondary);
  border-radius: 2px;
  position: absolute;
  top: 10px;
  left: 50%;
  transform: translateX(-50%);
  animation: scroll-wheel 2s infinite;
}

@keyframes scroll-wheel {
  0% { opacity: 1; transform: translateX(-50%) translateY(0); }
  100% { opacity: 0; transform: translateX(-50%) translateY(20px); }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
  40% { transform: translateX(-50%) translateY(-10px); }
  60% { transform: translateX(-50%) translateY(-5px); }
}

.scroll-text {
  font-size: 0.875rem;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 2px;
}

// Animations
.animate-float {
  animation: gentle-float 6s ease-in-out infinite;
}

@keyframes gentle-float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  25% { transform: translateY(-20px) rotate(-1deg); }
  75% { transform: translateY(10px) rotate(1deg); }
}

.fade-in-up {
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 0.8s ease forwards;
  animation-delay: calc(var(--delay, 0) * 1ms);
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

// Features Section Anchor
#features {
  scroll-margin-top: 100px;
}

// New compact hero header
.hero-header {
  text-align: center;
  margin-bottom: 40px;
}

.hero-logo-small {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  margin-bottom: 15px;
  
  .app-icon {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.3));
  }
  
  .hero-title-line {
    font-size: 2.5rem;
    margin: 0;
  }
}

// Screenshot Carousel Styles
.screenshot-carousel {
  max-width: 800px;
  margin: 0 auto 40px;
  position: relative;
}

.carousel-container {
  position: relative;
  border-radius: 16px;
  overflow: hidden;
  background: var(--surface);
  border: 1px solid var(--primary);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
}

.carousel-track {
  display: flex;
  transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.carousel-slide {
  min-width: 100%;
  position: relative;
  
  &:not(.active) {
    opacity: 0.7;
  }
}

.carousel-image {
  width: 100%;
  height: auto;
  max-height: 500px;
  object-fit: cover;
  display: block;
}

.carousel-caption {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 25px;
  background: linear-gradient(to top, rgba(37, 35, 53, 0.95) 0%, transparent 100%);
  color: var(--text-primary);
  transform: translateY(100%);
  transition: transform 0.3s ease;
  
  h3 {
    margin: 0 0 8px 0;
    font-size: 1.3rem;
    color: var(--text-primary);
  }
  
  p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.95rem;
  }
}

.carousel-slide:hover .carousel-caption {
  transform: translateY(0);
}

// Carousel Navigation
.carousel-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 2px solid rgba(255, 255, 255, 0.2);
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  font-size: 24px;
  color: white;
  transition: all 0.3s ease;
  z-index: 10;
  
  &:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-50%) scale(1.1);
  }
  
  &.prev {
    left: 20px;
  }
  
  &.next {
    right: 20px;
  }
}

// Carousel Dots
.carousel-dots {
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 12px;
  z-index: 10;
}

.dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  
  &.active {
    background: var(--cyan-neon);
    transform: scale(1.3);
  }
  
  &:hover {
    background: rgba(255, 255, 255, 0.7);
  }
}

// Responsive carousel
@media (max-width: 768px) {
  .hero-logo-small {
    flex-direction: column;
    gap: 10px;
    
    .hero-title-line {
      font-size: 2rem;
    }
  }
  
  .screenshot-carousel {
    max-width: 100%;
    margin: 0 0 30px;
  }
  
  .carousel-nav {
    width: 40px;
    height: 40px;
    font-size: 18px;
    
    &.prev {
      left: 10px;
    }
    
    &.next {
      right: 10px;
    }
  }
  
  .carousel-caption {
    padding: 20px;
    transform: translateY(0); // Always show on mobile
    
    h3 {
      font-size: 1.1rem;
    }
    
    p {
      font-size: 0.9rem;
    }
  }
}

// Particle styles
.particle {
  position: absolute;
  width: 4px;
  height: 4px;
  background: var(--cyan-neon);
  border-radius: 50%;
  bottom: -10px;
  opacity: 0;
  animation: float-up linear infinite;
  box-shadow: 0 0 6px var(--cyan-neon);
}

@keyframes float-up {
  0% {
    opacity: 0;
    transform: translateY(0) scale(0);
  }
  10% {
    opacity: 1;
    transform: translateY(-10vh) scale(1);
  }
  90% {
    opacity: 1;
    transform: translateY(-90vh) scale(1);
  }
  100% {
    opacity: 0;
    transform: translateY(-100vh) scale(0);
  }
}

// Responsive adjustments for Hero
@media (max-width: 768px) {
  .hero-section {
    min-height: 100vh;
    padding: 40px 20px 120px 20px; /* Extra space for scroll indicator */
  }
  
  .hero-logo {
    max-width: 400px;
  }
  
  .hero-title-line {
    font-size: 2.5rem;
  }
  
  .hero-subtitle {
    font-size: 1.1rem;
  }
  
  .hero-cta {
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin: 30px 0 50px 0; /* Increased bottom margin */
    z-index: 10; /* Ensure buttons are above other elements */
    
    .btn {
      width: 100%;
      max-width: 300px;
      margin-bottom: 15px;
      position: relative;
      z-index: 15;
    }
  }
  
  .hero-badges {
    z-index: 5;
    margin-bottom: 40px;
    
    img {
      transform: scale(0.9);
    }
  }
  
  .hero-scroll-indicator {
    bottom: 25px;
    z-index: 20; /* Higher z-index to ensure visibility */
  }
}

// Features Grid Styles
.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 30px;
  margin: 60px 0;
  padding: 20px 0;
}

.feature-card {
  background: var(--surface);
  border: 1px solid var(--primary);
  border-radius: 16px;
  padding: 40px 30px;
  text-align: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  
  &::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(198, 39, 144, 0.1) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }
  
  &:hover {
    transform: translateY(-8px);
    border-color: var(--accent);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2), 0 0 30px rgba(198, 39, 144, 0.2);
    
    &::before {
      opacity: 1;
    }
    
    .feature-icon {
      transform: scale(1.1) rotate(-5deg);
    }
  }
  
  h3 {
    margin: 20px 0 15px;
    font-size: 1.4rem;
    color: var(--text-primary);
    /* Remove any gradients for better readability */
  }
  
  p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }
}

.feature-icon {
  font-size: 3.5rem;
  display: inline-block;
  transition: transform 0.3s ease;
  filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
}

@media (max-width: 768px) {
  .features-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .feature-card {
    padding: 30px 20px;
  }
}

// Responsive adjustments for gallery
@media (max-width: 768px) {
  .screenshot-gallery {
    grid-template-columns: 1fr;
    gap: 20px;
    
    figcaption {
      transform: translateY(0);
      opacity: 1;
      background: linear-gradient(to top, rgba(37, 35, 53, 0.98) 0%, rgba(37, 35, 53, 0.8) 100%);
    }
  }
  
  .lightbox-nav {
    width: 40px;
    height: 40px;
    font-size: 18px;
    
    &.prev {
      left: 10px;
    }
    
    &.next {
      right: 10px;
    }
  }
}

// Scroll reveal animations
.scroll-reveal {
  opacity: 0;
  transform: translateY(30px);
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  
  &.scrolled {
    opacity: 1;
    transform: translateY(0);
  }
}

// Cursor glow effect
.cursor-glow {
  position: absolute;
  width: 400px;
  height: 400px;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(198, 39, 144, 0.1) 0%, transparent 50%);
  pointer-events: none;
  transform: translate(-50%, -50%);
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
  mix-blend-mode: screen;
}

body:hover .cursor-glow {
  opacity: 1;
}

// Enhanced button styles
.btn {
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform-style: preserve-3d;
  
  &::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: inherit;
    border-radius: inherit;
    opacity: 0.3;
    transform: translateZ(-5px) translateY(8px);
    filter: blur(10px);
    transition: all 0.3s ease;
  }
  
  &:hover::after {
    transform: translateZ(-10px) translateY(12px);
    filter: blur(20px);
  }
}

// Text gradient animation
.text-gradient {
  background: linear-gradient(90deg, var(--accent), var(--cyan-neon), var(--accent));
  background-size: 200% 100%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: gradient-shift 3s ease infinite;
}

@keyframes gradient-shift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

// Glitch effect for titles
.glitch {
  position: relative;
  
  &::before,
  &::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  
  &::before {
    animation: glitch-1 0.5s infinite;
    color: var(--cyan-neon);
    z-index: -1;
  }
  
  &::after {
    animation: glitch-2 0.5s infinite;
    color: var(--accent);
    z-index: -2;
  }
}

@keyframes glitch-1 {
  0%, 100% {
    clip-path: inset(0 0 0 0);
    transform: translate(0);
  }
  20% {
    clip-path: inset(33% 0 0 0);
    transform: translate(-2px, 2px);
  }
  40% {
    clip-path: inset(0 0 25% 0);
    transform: translate(2px, -2px);
  }
  60% {
    clip-path: inset(0 0 0 0);
    transform: translate(0);
  }
}

@keyframes glitch-2 {
  0%, 100% {
    clip-path: inset(0 0 0 0);
    transform: translate(0);
  }
  20% {
    clip-path: inset(0 0 60% 0);
    transform: translate(2px, 2px);
  }
  40% {
    clip-path: inset(25% 0 0 0);
    transform: translate(-2px, -2px);
  }
  60% {
    clip-path: inset(0 0 0 0);
    transform: translate(0);
  }
}

// Smooth scrollbar
::-webkit-scrollbar {
  width: 12px;
}

::-webkit-scrollbar-track {
  background: var(--background);
}

::-webkit-scrollbar-thumb {
  background: var(--primary);
  border-radius: 6px;
  transition: background 0.3s ease;
  
  &:hover {
    background: var(--accent);
  }
}

// Selection colors
::selection {
  background: var(--accent);
  color: white;
}

::-moz-selection {
  background: var(--accent);
  color: white;
}

// Badge component
.badge {
  display: inline-block;
  padding: 4px 12px;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  border-radius: 20px;
  vertical-align: middle;
  margin-left: 8px;
  
  &.badge-new {
    background: linear-gradient(135deg, var(--accent), var(--cyan-neon));
    color: white;
    animation: pulse-glow 2s infinite;
  }
  
  &.badge-beta {
    background: var(--highlight);
    color: var(--background);
  }
  
  &.badge-pro {
    background: linear-gradient(135deg, #FFD700, #FFA500);
    color: var(--background);
  }
}

// Tooltip component
.tooltip {
  position: relative;
  display: inline-block;
  cursor: help;
  
  &::before {
    content: attr(data-tooltip);
    position: absolute;
    bottom: 125%;
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    padding: 8px 12px;
    background: rgba(37, 35, 53, 0.95);
    color: var(--text-primary);
    font-size: 0.875rem;
    white-space: nowrap;
    border-radius: 6px;
    border: 1px solid var(--primary);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 1000;
    pointer-events: none;
  }
  
  &::after {
    content: '';
    position: absolute;
    bottom: 125%;
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    border: 6px solid transparent;
    border-top-color: var(--primary);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    margin-bottom: -12px;
  }
  
  &:hover::before,
  &:hover::after {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }
}

.info-icon {
  display: inline-block;
  width: 18px;
  height: 18px;
  line-height: 18px;
  text-align: center;
  background: rgba(0, 229, 255, 0.1);
  color: var(--cyan-neon);
  border-radius: 50%;
  font-size: 0.8rem;
  transition: all 0.3s ease;
  
  &:hover {
    background: rgba(0, 229, 255, 0.2);
    transform: scale(1.1);
  }
}

// Download info styles
.download-info {
  display: flex;
  align-items: center;
  gap: 10px;
  margin: 15px 0;
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.file-size {
  padding: 4px 8px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 4px;
  font-weight: 500;
}

// Enhanced download card styles
.download-card {
  position: relative;
  
  &::before {
    content: '';
    position: absolute;
    top: 10px;
    right: 10px;
    width: 30px;
    height: 30px;
    background: radial-gradient(circle, var(--cyan-neon) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }
  
  &:hover::before {
    opacity: 0.3;
    animation: pulse 2s infinite;
  }
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); }
}

// Button download variant
.btn-download {
  background: linear-gradient(135deg, var(--accent), var(--primary));
  position: relative;
  overflow: hidden;
  
  .btn-icon {
    display: inline-block;
    margin-left: 8px;
    transition: transform 0.3s ease;
  }
  
  &:hover .btn-icon {
    transform: translateY(3px);
    animation: bounce-down 0.5s ease infinite;
  }
}

@keyframes bounce-down {
  0%, 100% { transform: translateY(3px); }
  50% { transform: translateY(6px); }
}

// Notification toast (for future use)
.toast {
  position: fixed;
  bottom: 20px;
  right: 20px;
  padding: 16px 24px;
  background: var(--surface);
  border: 1px solid var(--primary);
  border-radius: 8px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  transform: translateX(400px);
  transition: transform 0.3s ease;
  z-index: 1000;
  
  &.show {
    transform: translateX(0);
  }
  
  &.success {
    border-color: #4CAF50;
    background: rgba(76, 175, 80, 0.1);
  }
  
  &.error {
    border-color: #f44336;
    background: rgba(244, 67, 54, 0.1);
  }
}

// Installation Guide Styles
.installation-guide {
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px;
}

.installation-header {
  text-align: center;
  margin-bottom: 50px;
}

.installation-title {
  font-size: 3rem;
  margin: 0 0 15px 0;
  background: linear-gradient(90deg, var(--accent), var(--cyan-neon));
  background-size: 200% 100%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: gradient-shift 3s ease infinite;
}

.installation-subtitle {
  font-size: 1.2rem;
  color: var(--text-secondary);
  margin: 0;
}

// Platform Tabs
.platform-tabs {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin: 0 0 60px 0;
  flex-wrap: wrap;
}

.tab-btn {
  background: var(--surface);
  border: 2px solid var(--primary);
  border-radius: 16px;
  padding: 20px 30px;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 12px;
  min-width: 160px;
  justify-content: center;
  
  &:hover {
    transform: translateY(-3px);
    border-color: var(--accent);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }
  
  &.active {
    background: linear-gradient(135deg, var(--accent), var(--primary));
    border-color: var(--accent);
    transform: translateY(-3px);
    box-shadow: 0 15px 35px rgba(198, 39, 144, 0.3);
  }
}

.tab-icon {
  font-size: 1.5rem;
  display: block;
}

.tab-label {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.95rem;
}

// Platform Content
.platform-content {
  display: none;
  animation: fadeInUp 0.5s ease forwards;
  
  &.active {
    display: block;
  }
}

.platform-intro {
  text-align: center;
  margin-bottom: 50px;
  
  h2 {
    font-size: 2.2rem;
    margin: 0 0 15px 0;
    color: var(--text-primary);
  }
  
  p {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 40px;
  }
}

// Requirements Grid
.requirements-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
  margin: 30px 0;
}

.requirement-item {
  background: var(--surface);
  border: 1px solid var(--primary);
  border-radius: 12px;
  padding: 20px;
  text-align: center;
  transition: all 0.3s ease;
  
  &:hover {
    transform: translateY(-5px);
    border-color: var(--accent);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }
}

.req-icon {
  font-size: 2rem;
  margin-bottom: 10px;
  display: block;
}

.req-text {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.9rem;
}

// Steps Container
.steps-container {
  max-width: 900px;
  margin: 0 auto;
}

.step-card {
  background: var(--surface);
  border: 1px solid var(--primary);
  border-radius: 16px;
  padding: 30px;
  margin-bottom: 30px;
  display: flex;
  align-items: flex-start;
  gap: 30px;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  animation: slideInLeft 0.6s ease forwards;
  animation-play-state: paused;
  
  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(to bottom, var(--accent), var(--cyan-neon));
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  &:hover {
    transform: translateX(10px);
    border-color: var(--accent);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
    
    &::before {
      opacity: 1;
    }
    
    .step-number {
      background: linear-gradient(135deg, var(--accent), var(--cyan-neon));
      transform: scale(1.1);
    }
    
    .visual-placeholder {
      transform: scale(1.1) rotate(5deg);
    }
  }
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-50px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.step-number {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background: var(--primary);
  color: var(--text-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.3rem;
  font-weight: 700;
  flex-shrink: 0;
  transition: all 0.3s ease;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.step-content {
  flex: 1;
  
  h3 {
    margin: 0 0 15px 0;
    font-size: 1.4rem;
    color: var(--text-primary);
  }
  
  p {
    margin: 0 0 20px 0;
    color: var(--text-secondary);
    line-height: 1.6;
  }
  
  code {
    background: rgba(0, 229, 255, 0.1);
    color: var(--cyan-neon);
    padding: 3px 6px;
    border-radius: 4px;
    font-family: 'Fira Code', 'Courier New', monospace;
    font-size: 0.9rem;
  }
}

.step-visual {
  width: 80px;
  height: 80px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.visual-placeholder {
